{% extends 'partials/layout.twig' %}
{% set title = 'IceCream - Home' %}
{% set url = 'https://icecreammc.xyz' %}
{% set description = 'IceCream is a fork of Purpur adding new configurations!' %}
{% block content %}
	<main>
		<header class="hero">
			<article>
				<h1>IceCream</h1>
				<p>{{ description }}</p>
				<button class="main" onclick="window.location.href='/downloads.html'">Downloads</button>
				<button class="second" onclick="window.open('https://docs.icecreammc.xyz/','_blank')">Documentation</button>
			</article>
		</header>
		<article id="features" class="features container">
			<header>
				<h2>Features</h2>
			</header>
			<section class="feature-container">
				<section>
					<img src="/src/images/document.svg" alt="document icon"/>
					<div>
						<h4>Our documentation!</h4>
						<p>
							IceCream's Documentation (ONLY IN ENGLISH)
						</p>
						<button class="main" onclick="window.open('https://docs.icecreammc.xyz')">Documentation</button>
					</div>
				</section>
				<section>
					<div>
						<h4>Open Source!</h4>
						<p>
							Like most other fork's IceCreamMC is also open source so you can view the code and make changes!
						</p>
						<button class="main" onclick="window.open('https://github.com/IceCreamMC','_blank')">GitHub</button>
					</div>
					<img src="/src/images/open-source.svg" alt="open source"/>
				</section>
			</section>
			<div style="
				        border-radius: 50%;
				        position: absolute;
				        width: 565px;
				        height: 565px;
				        left: calc(50% - 1165px/2 - 816px);
				        top: -190px;
				
				        background: rgba(29, 176, 243, 0.6);
				        filter: blur(407px);
				    "></div>
			<div style="
				        border-radius: 50%;
				        position: absolute;
				        width: 565px;
				        height: 565px;
				        left: calc(50% - 465px/2 + 992.5px);
				        top: 951px;
				
				        background: rgba(170, 217, 217, 0.6);
				        filter: blur(407px);
				    "></div>
		</article>
		<article class="support-container">
			<h2>Support us</h2>
			<h3>Support Our Work And Help Us Grow</h3>
			<button>ko-fi.com/icecreammc</button>
		</article>
	</main>
{% endblock %}
